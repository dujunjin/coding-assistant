{
  "manifest_version": 3,
  "name": "coding assistant",
  "version": "1.0",
  "permissions": [
    "activeTab",
    "contextMenus",
    "storage",
    "scripting",
    "tabs",
    "webNavigation",
    "sidePanel",
    "cookies"
  ],
  "host_permissions": [
    "http://ojo.bnu.edu.cn/*"
  ],
  "background": {
    "service_worker": "background.bundle.js"
  },
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icons/icon16.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    }
  },
  "content_scripts": [
    {
      "matches": ["http://ojo.bnu.edu.cn/*"],
      "js": [
        "libs/marked.min.js",
        "contentScript.bundle.js"
      ],
      "run_at": "document_end"
    }
  ],
  "side_panel": {
    "default_path": "sidepanel.html"
  },
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },

  "web_accessible_resources": [
    {
      "resources": [
        "extensionPage.html",
        "extensionPage.css",
        "extensionPage.js"
      ],
      "matches": [
        "http://*/*",
        "https://*/*"
      ]
    }
  ]
}
